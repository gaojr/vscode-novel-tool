{
  "name": "vscode-novel-tool",
  "version": "0.0.1",
  "description": "a tool for reading novel on vscode",
  "publisher": "gaojr",
  "repository": {
    "type": "git",
    "url": "https://github.com/gaojr/vscode-novel-tool"
  },
  "categories": ["Other"],
  "main": "./out/main.js",
  "activationEvents": [
    "*",
    "onCommand:novel.tool.narrow",
    "onCommand:novel.tool.deleteBlankAfter"
  ],
  "contributes": {
    "commands": [
      {
        "command": "novel.tool.narrow",
        "title": "全角转换为半角"
      },
      {
        "command": "novel.tool.deleteBlankAfter",
        "title": "删除行末空白"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write '**/*.{ts,js,json,md}'"
  },
  "devDependencies": {
    "@types/vscode": "^1.44.0",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "2.0.5",
    "typescript": "^3.8.3"
  },
  "engines": {
    "vscode": "^1.44.0"
  },
  "license": "MPL-2.0"
}
